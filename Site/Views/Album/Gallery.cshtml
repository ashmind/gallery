@model GalleryViewModel

@section head {
  <script src="@Url.Content("~/scripts/jquery.mousewheel-3.0.6.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/jquery.fancybox-2.0.4.min.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/jquery.fancybox-2.0.4-thumbs.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/jquery.lazyload.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/jquery.dragToSelect.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/jquery.form.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/jquery.ba-hashchange.min.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/jquery.dragout.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/gallery.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/gallery.history.js")" type="text/javascript"></script>

  <script type="text/javascript">global.rootUrl = '@Url.Content("~")';</script>
}

@section title {
  @Request.Url.Host gallery @(Model.Selected != null ? ":" + @Model.Selected.Name : "" )
}

<div id="left">
    @{Html.RenderPartial("_Names");}
</div>
  
<div id="main">    
  @if (Model.Selected != null) { 
      Html.RenderPartial("_View", Model.Selected);
   } 
</div>